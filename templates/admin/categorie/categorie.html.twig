{% extends 'base.html.twig' %}

{% block title %}
	Administration des categories
{% endblock %}

{% block body %}
	<div class="container-fluid row mt-4">
			<div class="row">
				<h1 class="col-md-10 ">liste des categories</h1>
				<a href="{{ path('admin_categorie_new') }}" class="btn btn-primary col-md-2">nouvelle categorie</a>
			</div>
			<div class="col-md-2 my-5">
				<ul class="list-group">
					<li class="list-group-item list-group-item-action list-group-item-dark"> <a href="{{ path('admin_categorie') }}" class="text-decoration-none">Liste des categories</a> </li>
					<li class="list-group-item"> <a href="{{ path('admin_plat') }}" class="text-decoration-none">Liste des plats</a> </li>
					<li class="list-group-item"> <a href="{{ path('admin_commande') }}" class="text-decoration-none">Liste des commandes</a> </li>
					<li class="list-group-item"> <a href="{{ path('admin_user') }}" class="text-decoration-none">Liste des utilisateur</a> </li>
				</ul>
			</div>
		<div class="col-lg-10">
			<table class="table table-hover">
				<thead>
					<tr>
						<th class="d-none d-lg-table-cell d-print-teble-cell" scope="col">Id</th>
						<th scope="col">Nom</th>
						<th class="d-none d-lg-table-cell d-print-teble-cell" scope="col">image</th>
						<th scope="col">Edition</th>
						<th scope="col">suppresion</th>
					</tr>
				</thead>
				<tbody>
					{% for categorie in categories %}
						<tr class="table-primary">
							<th class="d-none d-lg-table-cell d-print-teble-cell" scope="row">{{ categorie.id }}</th>
							<td>{{ categorie.libelle }}</td>
							<td class="d-none d-lg-table-cell d-print-teble-cell">{{ categorie.image }}</td>
							<td>
								<a href="{{ path('admin_categorie_edit', {'id': categorie.id}) }}" class="btn btn-info">Modifier</a>
							</td>
							<td>
								<a href="{{ path('admin_categorie_delete', {'id': categorie.id}) }}" class="btn btn-warning">Supprimer</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<div class="navigation d-flex justify-content-center mt-4">
				{{ knp_pagination_render(categories) }}
			</div>
		</div>
	</div>
{% endblock %}
