{% extends 'base.html.twig' %}

{% block title %}
	Administration des utilisateur
{% endblock %}

{% block body %}
	<div class="container-fluid row mt-4">
		<div class="col-md-2 mb-5">
			<div class="card border-dark mb-3" style="max-width: 20rem;">
				<div class="card-body">
					<h4>
						liste de admin
					</h2>
					<ul>
						<li><a href="{{ path('admin_categorie') }}">liste des categories</a></li>
						<li><a href="{{ path('admin_plat') }}">liste des plats</a></li>
						<li><a href="{{ path('admin_commande') }}">liste des commandes</a></li>
						<li><a href="{{ path('admin_user') }}">liste des utilisateur</a></li>
					</ul>
				</div>
			</div>
		</div>
		<div class="col-md-10">
			<h1>liste des commandes</h1>
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">Numéro</th>
						<th scope="col">Etat</th>
						<th scope="col">Date de commande</th>
						<th scope="col">total a payer</th>
						<th scope="col">Email</th>
						<th scope="col">modifier</th>
						<th scope="col">suppresion</th>
					</tr>
				</thead>
				<tbody>
					{% for commande in commandes %}
						<tr class="table-primary">
							<th scope="row">{{ commande.id }}</th>
							<td>
								{% if commande.etat == 0 %}
									Validée
								{% else %}
									{% if commande.etat == 1 %}
										En préparation
									{% else %}
										{% if commande.etat == 2 %}
											En cours de livraison
										{% else %}
											{% if commande.etat == 3 %}
												Livrée
											{% else %}
												Annulée		
											{% endif %}		
										{% endif %}		
									{% endif %}
								{% endif %}
							</td>
							<td>{{ commande.dateCommande|date('d/m/Y') }}</td>
							<td>{{ commande.total }}€</td>
							<td>{{ commande.user.email }}</td>
							<td>
								<a href="{{ path('admin_commande_edit', {'id': commande.id}) }}" class="btn btn-info">Modifier</a>
							</td>
							<td>
								<a href="{{ path('admin_commande_delete', {'id': commande.id}) }}" class="btn btn-warning">Supprimer</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}