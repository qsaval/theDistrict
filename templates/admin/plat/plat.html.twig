{% extends 'base.html.twig' %}

{% block title %}
	Administration des plats
{% endblock %}

{% block body %}
	<div class="container-fluid row mt-4">
		<div class="row">
				<h1 class="col-md-10">liste des plats</h1>
				<a href="{{ path('admin_plat_new') }}" class="btn btn-primary col-md-2">nouveau plat</a>
			</div>
		<div class="col-md-2 my-5">
			<ul class="list-group">
				<li class="list-group-item"> <a href="{{ path('admin_categorie') }}" class="text-decoration-none">Liste des categories</a> </li>
				<li class="list-group-item list-group-item-action list-group-item-dark"> <a href="{{ path('admin_plat') }}" class="text-decoration-none">Liste des plats</a> </li>
				<li class="list-group-item"> <a href="{{ path('admin_commande') }}" class="text-decoration-none">Liste des commandes</a> </li>
				<li class="list-group-item"> <a href="{{ path('admin_user') }}" class="text-decoration-none">Liste des utilisateur</a> </li>
			</ul>
		</div>
		<div class="col-lg-10">
			
			<table class="table table-hover">
				<thead>
					<tr class="row">
						<th class="d-none d-lg-table-cell d-print-teble-cell col-1" scope="col">Id</th>
						<th class="col-4 col-lg-2" scope="col">Nom</th>
						<th class="d-none d-lg-table-cell d-print-teble-cell col-4" scope="col">Description</th>
						<th class="d-none d-lg-table-cell d-print-teble-cell col-1" scope="col">Prix</th>
						<th class="col-4 col-lg-2" scope="col">Edition</th>
						<th class="col-4 col-lg-2" scope="col">Suppresion</th>
					</tr>
				</thead>
				<tbody>
					{% for plat in plats %}
						<tr class="table-primary row">
							<th class="d-none d-lg-table-cell d-print-teble-cell col-1" scope="row">{{ plat.id }}</th>
							<td class="col-4 col-lg-2">{{ plat.libelle }}</td>
							<td class="d-none d-lg-table-cell d-print-teble-cell col-4">{{ plat.description }}</td>
							<td class="d-none d-lg-table-cell d-print-teble-cell col-1">{{ plat.prix }}â‚¬</td>
							<td class="col-4 col-lg-2">
								<a href="{{ path('admin_plat_edit', {'id': plat.id}) }}" class="btn btn-info">Modifier</a>
							</td>
							<td class="col-4 col-lg-2">
								<a href="{{ path('admin_plat_delete', {'id': plat.id}) }}" class="btn btn-warning">Supprimer</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<div class="navigation d-flex justify-content-center mt-4">
				{{ knp_pagination_render(plats) }}
			</div>
		</div>
	</div>
{% endblock %}
