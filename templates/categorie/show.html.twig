{% extends "base.html.twig" %}

{% block title %}
{{ categories.libelle }}
{% endblock %}

{% block body %}
<div class="container">
	<div class="d-flex justify-content-center">
		<img src="{{ asset('media/assiette2.jpg') }}" alt="logo">
	</div>
	<h1 class="mt-4">liste des plats de la categorie {{ categories.libelle }}</h1>
	<div class="row">
		{% for plat in categories.plats %}
			{% if plat.active == true %}
				<div class="col-md-4 mt-3">
					<div class="card border-dark Carte">
						<div class="card-body">
							<h4 class="card-title">{{ plat.libelle }}</h4>
							<div class="d-flex justify-content-center mt-2">
								<img src="{{ asset('media/') }}{{ plat.image }}" alt="{{ plat.libelle }}" height="10rem" class="img-fluid img-thumbnail">
							</div>
							<br>
							<div class="d-flex justify-content-between">
								<a href="{{ path('plat_show', {'id': plat.id}) }}" class="btn btn-primary">Description</a>
								<a href="{{ path('cart_add', {'id': plat.id}) }}" class="btn btn-primary">panier</a>
							</div>
						</div>
					</div>
				</div>
			{% endif %}
		{% endfor %}
	</div>
</div>
{% endblock %}