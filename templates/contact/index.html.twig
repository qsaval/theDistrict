{% extends "base.html.twig" %}

{% block title %} Contact{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-3">Contact</h1>
    {{ form_start(form) }}
    {% if app.user %}
    {{ form_row(form.auteur,{disabled: true}) }}
    {% else %}
    {{ form_row(form.auteur) }}
    {% endif %}

    {% if app.user %}
    {{ form_row(form.email,{disabled: true}) }}
    {% else %}
    {{ form_row(form.email) }}
    {% endif %}
    
    {{ form_row(form.suject) }}
    {{ form_row(form.contenu) }}
    <button type="submit" class="btn btn-primary">Envoyer</button>
    {{ form_end(form) }}
</div>
{% endblock %}
