{% extends 'base.html.twig' %}

{% block title %} Catégorie{% endblock %}

{% block body %}
    <div class="container">
        <h1 class=" mt-4">Liste des catégories</h1>
        <p>Bon choix a vous:</p>
        <div class="d-flex flex-wrap">
            {% for categorie in categories %}
                {% if categorie.active == 'Yes' %}  
                    <div class="card border-dark mb-3 mx-2" style="max-width: 20rem;">
                        <div class="card-body">
                        <h4 class="card-title">{{ categorie.libelle }}</h4>
                        <img src="{{ asset('media/') }}{{ categorie.image }}" alt="{{ categorie.libelle }}" heigh="330px" width="280px">
                        <br>
                        <a href="#" class="btn ptn-primary">liste des Plats</a>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div> 
{% endblock %}