{% extends 'base.html.twig' %}

{% block title %}
Acceuil
{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex justify-content-center">
        <img src="{{ asset('media/assiette2.jpg') }}" alt="" class="">
    </div>
    <form class="d-flex">
        <input class="form-control me-sm-2" type="search" placeholder="Recherche">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Recherche</button>
    </form>
    <h1 class="mt-4">Bienvenue sur le site de notre restaurant</h1>
    <p>Notre restaurant propose plusieur plat pour tout les gouts, plusieur categorie de plat sont mise a votre
        disposition</p>
    <br>
    <p>Bon choix a vous:</p>
    <div class="row">
        {% for categorie in categories %}
        {% if categorie.active == 'Yes' %}
        <div class="col-lg-4 my-2">
            <div class="card border-dark" style="height: 33rem;">
                <div class="card-body">
                    <h4 class="card-title">{{ categorie.libelle }}</h4>
                    <img src="{{ asset('media/') }}{{ categorie.image }}" alt="{{ categorie.libelle }}" heigh="330px"
                        width="280px">
                    <br>
                    <a href="{{ path('categorie_show', {'id': categorie.id}) }}" class="btn btn-primary mt-2">liste des
                        Plats</a>
                </div>
            </div>
        </div>
        {% endif %}
        {% endfor %}
    </div>
    <div class="row">
        {% for plat in plats %}
            <div class="col-lg-4 mt-3">
                <div class="card border-dark" style="height: 35rem">
                    <div class="card-body">
                        <h4 class="card-title">{{ plat.libelle }}</h4>
                        <img src="{{ asset('media/') }}{{ plat.image }}" alt="{{ plat.libelle }}" height="10rem" class="img-fluid img-thumbnail">
                        <br>
                        <a href="{{ path('plat_show', {'id': plat.id}) }}" class="btn btn-primary">Description</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}