{% extends "base.html.twig" %}

{% block title %} {{ categories.libelle }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">liste des plat de la categorie {{ categories.libelle }}</h1>
        {% for plat in plats %}
				<div class="col-4 mt-3">
					<div class="card border-dark" style="height: 35rem">
						<div class="card-body">
							<h4 class="card-title">{{ plat.libelle }}</h4>
							<img src="{{ asset('media/') }}{{ plat.image }}" alt="{{ plat.libelle }}" height="10rem" class="img-fluid img-thumbnail">
							<br>
							<a href="{{ path('plat_show', {'id': plat.id}) }}" class="btn ptn-primary">Description</a>
						</div>
					</div>
				</div>
			{% endfor %}
    </div>
{% endblock %}