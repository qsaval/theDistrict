{% extends 'base.html.twig' %}

{% block title %}
	Plats
{% endblock %}

{% block body %}
	<div class="container">
		<div class="d-flex justify-content-center">
			<img src="media/assiette2.jpg" alt="" class="">
		</div>
		<h1 class=" mt-4">Liste des plats</h1>
		<p>Bon choix a vous:</p>
		<div class="row">
			{% for plat in plats %}
				{% if plat.active == 'Yes' %}
					<div class="col-lg-4 mt-3">
						<div class="card border-dark" style="height: 35rem">
							<div class="card-body">
								<h4 class="card-title">{{ plat.libelle }}</h4>
								<img src="media/{{ plat.image }}" alt="{{ plat.libelle }}" height="10rem" class="img-fluid img-thumbnail">
								<br>
								<a href="{{ path('plat_show', {'id': plat.id}) }}" class="btn btn-primary">Description</a>
							</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>
		<div class="navigation d-flex justify-content-center mt-4">
			{{ knp_pagination_render(plats) }}
		</div>
	</div>
{% endblock %}